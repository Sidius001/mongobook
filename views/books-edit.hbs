<h2>Редактировать: <span>"{{books.title}}"</span></h2>
{{#if error}}
  <div class="reg-err"><p>{{error}}</p></div>
{{/if}}
<form action="/books/edit" method="post">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{books.title}}">
    <label for="title">Название книги:</label>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" value="{{books.price}}">
    <label for="price">Цена книги (UAH):</label>
  </div>
  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" value="{{books.image}}">
    <label for="image">Ссылка на фото обложки:</label>
  </div>
  <input type="hidden" name="_id" value="{{books._id}}">
  <input type="hidden" name="_csrf" value="{{@root.csrf}}">
  <button class="btn btn-primary">Редактировать книгу</button>
</form>
<form action="/books/remove" method="post" class="rem">
  <input type="hidden" name="_id" value="{{books._id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red bk-remove">Удалить книгу</button>
</form>